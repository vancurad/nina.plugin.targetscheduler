<UserControl x:Class="NINA.Plugin.TargetScheduler.Controls.Reporting.ReportingManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/Resources.xaml" />
    </UserControl.Resources>

    <StackPanel>
        <Border Margin="0,10,0,10"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Column="0">
                    <Grid Width="600"
                          Margin="15,20,5,12"
                          HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition Width="260" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="25" />
                            <RowDefinition MinHeight="25" />
                            <RowDefinition MinHeight="25" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   MaxWidth="80"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="Target" />
                        <ComboBox Grid.Row="0"
                                  Grid.Column="1"
                                  MinWidth="233"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  DisplayMemberPath="Value"
                                  ItemsSource="{Binding TargetChoices}"
                                  SelectedValue="{Binding SelectedTargetId}"
                                  SelectedValuePath="Key" />

                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   MaxWidth="80"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="Filter" />
                        <ComboBox Grid.Row="1"
                                  Grid.Column="1"
                                  MinWidth="233"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  DisplayMemberPath="Value"
                                  ItemsSource="{Binding FilterChoices}"
                                  SelectedValue="{Binding SelectedFilterId}"
                                  SelectedValuePath="Key" />

                        <StackPanel Grid.Row="2"
                                    Grid.Column="0"
                                    Orientation="Horizontal">
                            <Button Width="18"
                                    Height="18"
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Command="{Binding RefreshTableCommand}"
                                    Style="{StaticResource BackgroundButton}"
                                    ToolTip="Refresh the table to reflect external changes"
                                    ToolTipService.ShowOnDisabled="True">
                                <Grid>
                                    <Path Data="{StaticResource SS_RefreshSVG}"
                                          Fill="{StaticResource ButtonForegroundBrush}"
                                          Stretch="Uniform" />
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Grid Height="350"
              Visibility="{Binding TableLoading, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
            <ninactrl:LoadingControl MaxWidth="100"
                                     MaxHeight="100"
                                     Margin="0,30,0,0"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     LoadingImageBrush="{StaticResource PrimaryBrush}"
                                     Visibility="{Binding TableLoading, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}" />
        </Grid>

        <StackPanel Visibility="{Binding TableLoading, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
            <TextBlock MaxWidth="500"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="{Binding ReportTableSummary.Title}" />

            <Grid Width="600"
                  Margin="15,12,5,12"
                  HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="22" />
                    <RowDefinition MinHeight="22" />
                    <RowDefinition MinHeight="22" />
                    <RowDefinition MinHeight="22" />
                    <RowDefinition MinHeight="22" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           MaxWidth="80"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="Dates:" />
                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           MaxWidth="400"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding ReportTableSummary.DateRange}" />

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           MaxWidth="80"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="Star Count:" />
                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           MaxWidth="80"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding ReportTableSummary.StarsRange}" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           MaxWidth="80"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="HFR:" />
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           MaxWidth="80"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding ReportTableSummary.HFRRange}" />

                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           MaxWidth="80"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="FWHM:" />
                <TextBlock Grid.Row="3"
                           Grid.Column="1"
                           MaxWidth="80"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding ReportTableSummary.FWHMRange}" />

                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           MaxWidth="80"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="Eccentricity:" />
                <TextBlock Grid.Row="4"
                           Grid.Column="1"
                           MaxWidth="80"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding ReportTableSummary.EccentricityRange}" />
            </Grid>

            <TextBlock Margin="3,3,0,10"
                       FontSize="12"
                       FontStyle="Italic"
                       Text="Click the table headers to sort" />

            <DataGrid Height="950"
                      Margin="12,0,0,0"
                      AutoGenerateColumns="False"
                      BorderThickness="0"
                      CanUserAddRows="False"
                      CanUserSortColumns="True"
                      HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                      HorizontalScrollBarVisibility="Disabled"
                      IsReadOnly="True"
                      IsSynchronizedWithCurrentItem="False"
                      ItemsSource="{Binding ItemsView}"
                      RowHeight="200"
                      ScrollViewer.CanContentScroll="False"
                      VerticalScrollBarVisibility="Auto">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="HorizontalAlignment"
                                Value="Left" />
                        <Setter Property="BorderBrush"
                                Value="{StaticResource BorderBrush}" />
                        <Setter Property="BorderThickness"
                                Value="0" />
                        <Setter Property="MinHeight"
                                Value="25" />
                        <Setter Property="Margin"
                                Value="5,3,5,3" />
                        <Setter Property="FontWeight"
                                Value="Bold" />
                        <Setter Property="FontSize"
                                Value="12" />
                        <EventSetter Event="Click"
                                     Handler="columnHeader_Click" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush"
                                Value="{StaticResource BorderBrush}" />
                        <Setter Property="BorderThickness"
                                Value="0" />
                        <Setter Property="Height"
                                Value="250" />
                        <Setter Property="VerticalAlignment"
                                Value="Top" />
                        <Setter Property="Margin"
                                Value="5,3,5,3" />
                        <Setter Property="Background"
                                Value="Transparent" />
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Height"
                                Value="200" />
                        <Setter Property="Background"
                                Value="Transparent" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>

                    <DataGridTemplateColumn Width="{Binding ThumbnailWidth}">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="Thumbnail" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="{Binding ThumbnailWidth}"
                                       Height="{Binding ThumbnailHeight}"
                                       VerticalAlignment="Top"
                                       Source="{Binding Thumbnail}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="Date" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Width="Auto"
                                               Text="{Binding AcquiredDate, StringFormat='{}{0:yyyy-MM-dd}'}" />
                                    <TextBlock Width="Auto"
                                               Text="{Binding AcquiredDate, StringFormat='{}{0:HH:mm:ss}'}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="Filter" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="Auto"
                                           Text="{Binding FilterName}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="Stars" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="Auto"
                                           Text="{Binding DetectedStars}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="HFR" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="Auto"
                                           Text="{Binding HFR}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="FWHM" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="Auto"
                                           Text="{Binding FWHM}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="Eccentricity" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="Auto"
                                           Text="{Binding Eccentricity}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="Grading" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="Auto"
                                           Text="{Binding GradingStatus}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="Reject Reason" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="Auto"
                                           Text="{Binding RejectReason}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </StackPanel>
</UserControl>